<!-- 姓名栏 -->
<view class="name">姓名：
  <input value="{{personData.name}}"></input>
</view>

<!-- 性别栏 -->
<view class="sex">性别：
  <radio-group>
    <radio class="radio-male">男</radio>
    <radio class="radio-female">女</radio>
  </radio-group>
</view> 

<!-- 院系栏 -->
<view class="department">
  
  <view>院系：</view>
  
  <view class="department-select">
  
    <view class='select' catchtap='selectTap'>
      
      <text class='select_text'>{{selectData[personData.department]}}</text>
      <image class='select_img {{show&&"select_img_rotate"}}' src='/pictures/gobottom.png'></image>        
    </view>
    
    <view class='option_box' style="height:{{show?(selectData.length>5?300:selectData.length*60):0}}rpx;">
    
    <text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
  
    </view>
  
  </view>
</view> 

<!-- 电话栏 -->
<view class="phone">电话：
  <view>
    <text>{{personData.phone}}</text>
  </view>
</view>

<!-- 简述栏 -->
<view class="overview" >
    <text>申请理由:</text>
  <view>
    <textarea maxlength="2000">{{personData.overview}}</textarea>
  </view>
</view>

<!-- 提交栏 -->
<view class="submit">
  <view>
    <button>提交</button>
  </view>
</view>