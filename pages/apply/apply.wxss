page {
  font-size: 42rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: auto;
  background: linear-gradient(#c2ccff, #a3feff)

}


/* 姓名栏 */
.name {
  margin-top: 20rpx;
  height: 50rpx;
  justify-content: flex-start;
  display: flex;
  align-items: center;
}

.name view {
  width: 385rpx;
  height: 50rpx;
  border:2px solid #696969;
  border-radius: 5px;
  padding-left: 20rpx;
  margin-left: 26rpx;
}

.name view input {


  font-size: 32rpx;
}


/* 性别栏 */
.sex {
  height: 50rpx;
  margin-top: 40rpx;
  display: flex;
}

.sex radio-group {
  transform: scale(0.8);
}

.sex radio-group text {
  margin-left: 10rpx;
  margin-right: 120rpx;
}


/* 院系栏 */
.department{
  margin-top: 40rpx;

  display: flex;
}
.select{
  box-sizing: border-box;
  position: absolute;
  margin-left: 30rpx;
  width: 57%;
  height: 54rpx;
  border:2px solid #696969;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 25rpx;
  height: 35rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 

}
.option_box{
  position: absolute;
  margin-top: 150rpx;
  margin-left: 30rpx;
  top: 50rpx;
  width: 50%;
  border: 2px solid #696969;
  box-sizing: border-box;
  height: 200rpx;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 2px solid #696969;
  padding: 10rpx;
}

/* 电话栏 */

.phone {
  margin-top: 40rpx;
  display: flex;
}

.phone view {
  width: 400rpx;
  height: 50rpx;
  border: 2px solid #696969;
  border-radius: 5px;
  margin-left: 30rpx;
}

.phone input {

  align-content: center;
  font-size: 32rpx;
  padding-left: 20rpx;

}

/* 简述栏 */

.overview {
  margin-top: 40rpx;
  margin-right: 20rpx;
}

.overview view {
  margin-top: 20rpx;
  height: 400rpx;
  border: 2px solid #696969;
}

.overview view textarea {
  width: auto;
  padding: 15rpx;
  font-size: 32rpx;
  height: 370rpx;
}

.submit view {
  margin-top: 100rpx;
  width: 100;
  display: flex;
  justify-content: center;
  align-items: center;
  vertical-align: center;

}

.submit view image {
  width: 10%;
}