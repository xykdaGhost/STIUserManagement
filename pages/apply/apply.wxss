page {
  font-size: 42rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: auto;

}


/* 姓名栏 */
.name {
  margin-top: 20rpx;
  height: 50rpx;
  justify-content: flex-start;
  display: flex;
  align-items: center;
}

.name input {
  width: 400rpx;
  height: 50rpx;
  border:1px solid #efefef;
  border-radius: 5rpx;
  padding-left: 20rpx;
  margin-left: 26rpx;
  font-size: 32rpx;
}


/* 性别栏 */
.sex {
  height: 50rpx;
  margin-top: 25rpx;
  display: flex;
}

.sex radio-group {
  transform: scale(0.8);
}


.radio-male {
  margin-left: 20rpx;
}

.radio-female {
  margin-left: 80rpx;
}

/* 院系栏 */
.department{
  margin-top: 25rpx;

  display: flex;
}
.select{
  box-sizing: border-box;
  position: absolute;
  margin-left: 30rpx;
  width: 57%;
  height: 54rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 25rpx;
  height: 35rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 

}
.option_box{
  position: absolute;
  margin-top: 119.5rpx;
  margin-left: 30rpx;
  top: 50rpx;
  width: 50%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

/* 电话栏 */

.phone {
  margin-top: 25rpx;
  display: flex;
}

.phone view {
  width: 400rpx;
  border: 1px solid #efefef;
  border-radius: 5px;
  margin-left: 30rpx;
}

.phone text {

  align-content: center;
  font-size: 32rpx;
  padding-left: 20rpx;

}

/* 简述栏 */

.overview {
  margin-top: 25rpx;
  margin-right: 20rpx;
}

.overview view {
  margin-top: 20rpx;
  padding-r: 60rpx;
  height: 400rpx;
  border: 1px solid #efefef;
}

.overview view input {
  font-size: 32rpx;
}